@model ProjetoXico.Models.TipoProjetoViewModel

@{
    ViewData["Title"] = "Tipos de Projeto 📝";
}

<div class="container min-vh-100 d-flex flex-column justify-content-start py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <button class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#inserirModal">
            ➕ Adicionar Tipo
        </button>
    </div>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Mensagem"]</div>
    }

    <!-- Tabela Ativos -->
    <h3 class="text-success">Tipos de Projeto Ativos</h3>
    <table class="table table-striped table-bordered table-dark align-middle text-center">
        <thead class="table-warning text-dark">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ativos)
            {
                <tr>
                    <td>@item.IdTipoProjeto</td>
                    <td>@item.Descricao</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1"
                                data-bs-toggle="modal"
                                data-bs-target="#editarModal"
                                data-id="@item.IdTipoProjeto"
                                data-descricao="@item.Descricao"
                                data-ativo="@item.FlAtivo.ToString().ToLower()">
                            ✏️ Editar
                        </button>
                        <form asp-action="Excluir" asp-controller="TbTipoProjeto" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.IdTipoProjeto" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Deseja realmente excluir este tipo de projeto?');">
                                🗑️ Deletar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Tabela Inativos -->
    <h3 class="mt-5 text-danger">Tipos de Projeto Inativos</h3>
    <table class="table table-striped table-bordered table-dark align-middle text-center">
        <thead class="table-danger text-dark">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inativos)
            {
                <tr>
                    <td>@item.IdTipoProjeto</td>
                    <td>@item.Descricao</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1"
                                data-bs-toggle="modal"
                                data-bs-target="#editarModal"
                                data-id="@item.IdTipoProjeto"
                                data-descricao="@item.Descricao"
                                data-ativo="@item.FlAtivo.ToString().ToLower()">
                            ✏️ Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="editarModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">✏️ Editar Tipo de Projeto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Atualizar" asp-controller="TbTipoProjeto" method="post" id="formEditar">
                    <input type="hidden" id="editarId" name="IdTipoProjeto" />
                    <div class="mb-3">
                        <label class="form-label">Descrição 📝</label>
                        <input type="text" class="form-control" id="editarDescricao" name="Descricao" required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="editarFlAtivo" name="FlAtivo" value="true" />
                        <label class="form-check-label" for="editarFlAtivo">Ativo ✅</label>
                        <input type="hidden" name="FlAtivo" value="false" />
                    </div>
                    <button type="submit" class="btn btn-info w-100">💾 Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Inserir -->
<div class="modal fade" id="inserirModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">➕ Adicionar Tipo de Projeto</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Inserir" asp-controller="TbTipoProjeto" method="post" id="formInserir">
                    <div class="mb-3">
                        <label class="form-label">Descrição 📝</label>
                        <input type="text" class="form-control" id="novoDescricao" name="Descricao" required>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="novoFlAtivo" name="FlAtivo" value="true" checked />
                        <label class="form-check-label" for="novoFlAtivo">Ativo ✅</label>
                        <input type="hidden" name="FlAtivo" value="false" />
                    </div>
                    <button type="submit" class="btn btn-warning w-100">💾 Adicionar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Preenche o modal de edição com os dados do botão clicado
    const editarModal = document.getElementById('editarModal');
    if (editarModal) {
        editarModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;
            const id = button.getAttribute('data-id');
            const descricao = button.getAttribute('data-descricao');
            const ativo = button.getAttribute('data-ativo') === 'true';

            document.getElementById('editarId').value = id;
            document.getElementById('editarDescricao').value = descricao;
            document.getElementById('editarFlAtivo').checked = ativo;
        });
    }
</script>
