@model ProjetoXico.ViewModel.MaterialViewModel

@{
    ViewData["Title"] = "Materiais 🛠️";
}

<div class="container min-vh-100 d-flex flex-column justify-content-start py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <button class="btn btn-warning btn-lg" data-bs-toggle="modal" data-bs-target="#inserirModal">
            ➕ Adicionar Material
        </button>
    </div>

    @if (TempData["Mensagem"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Mensagem"]</div>
    }

    <!-- Tabela Ativos -->
    <h3 class="text-success">Materiais Ativos</h3>
    <table class="table table-striped table-bordered table-dark align-middle text-center">
        <thead class="table-warning text-dark">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Unidade</th>
                <th>Quantidade</th>
                <th>Métrica</th>
                <th>Valor Unitário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ativos)
            {
                <tr>
                    <td>@item.IdMaterial</td>
                    <td>@item.Descricao</td>
                    <td>@item.UnidadeMedida</td>
                    <td>@item.Quantidade.ToString("0")</td>
                    <td>@item.Metrica</td>
                    <td>@item.ValorUnitario?.ToString("0")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1"
                                data-bs-toggle="modal"
                                data-bs-target="#editarModal"
                                data-id="@item.IdMaterial"
                                data-descricao="@item.Descricao"
                                data-unidade="@item.UnidadeMedida"
                                data-quantidade="@item.Quantidade"
                                data-metrica="@item.Metrica"
                                data-valor="@item.ValorUnitario"
                                data-ativo="@item.FlAtivo.ToString().ToLower()">
                            ✏️ Editar
                        </button>
                        <form asp-action="Excluir" asp-controller="TbMaterial" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.IdMaterial" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Deseja realmente excluir este material?');">
                                🗑️ Deletar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Tabela Inativos -->
    <h3 class="mt-5 text-danger">Materiais Inativos</h3>
    <table class="table table-striped table-bordered table-dark align-middle text-center">
        <thead class="table-danger text-dark">
            <tr>
                <th>ID</th>
                <th>Descrição</th>
                <th>Unidade</th>
                <th>Quantidade</th>
                <th>Métrica</th>
                <th>Valor Unitário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Inativos)
            {
                <tr>
                    <td>@item.IdMaterial</td>
                    <td>@item.Descricao</td>
                    <td>@item.UnidadeMedida</td>
                    <td>@item.Quantidade.ToString("0")</td>
                    <td>@item.Metrica</td>
                    <td>@item.ValorUnitario?.ToString("0")</td>
                    <td>
                        <button class="btn btn-sm btn-info me-1"
                                data-bs-toggle="modal"
                                data-bs-target="#editarModal"
                                data-id="@item.IdMaterial"
                                data-descricao="@item.Descricao"
                                data-unidade="@item.UnidadeMedida"
                                data-quantidade="@item.Quantidade"
                                data-metrica="@item.Metrica"
                                data-valor="@item.ValorUnitario"
                                data-ativo="@item.FlAtivo.ToString().ToLower()">
                            ✏️ Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal Editar -->
<div class="modal fade" id="editarModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">✏️ Editar Material</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Atualizar" asp-controller="TbMaterial" method="post" id="formEditar">
                    <input type="hidden" id="editarId" name="IdMaterial" />
                    <div class="mb-3">
                        <label class="form-label">Descrição 📝</label>
                        <input type="text" class="form-control" id="editarDescricao" name="Descricao" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Unidade de Medida 📏</label>
                        <input type="text" class="form-control" id="editarUnidade" name="UnidadeMedida" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantidade 🔢</label>
                        <input type="number" step="1" class="form-control" id="editarQuantidade" name="Quantidade" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Métrica 🧮</label>
                        <input type="text" class="form-control" id="editarMetrica" name="Metrica">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Valor Unitário 💰</label>
                        <input type="number" step="1" class="form-control" id="editarValor" name="ValorUnitario">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="editarFlAtivo" name="FlAtivo" value="true" />
                        <label class="form-check-label" for="editarFlAtivo">Ativo ✅</label>
                        <input type="hidden" name="FlAtivo" value="false" />
                    </div>
                    <button type="submit" class="btn btn-info w-100">💾 Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Inserir -->
<div class="modal fade" id="inserirModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">➕ Inserir Novo Material</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Inserir" asp-controller="TbMaterial" method="post" id="formInserir">
                    <div class="mb-3">
                        <label class="form-label">Descrição 📝</label>
                        <input type="text" class="form-control" name="Descricao" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Unidade de Medida 📏</label>
                        <input type="text" class="form-control" name="UnidadeMedida" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantidade 🔢</label>
                        <input type="number" step="1" class="form-control" name="Quantidade" value="0" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Métrica 🧮</label>
                        <input type="text" class="form-control" name="Metrica">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Valor Unitário 💰</label>
                        <input type="number" step="1" class="form-control" name="ValorUnitario" value="0">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="inserirFlAtivo" name="FlAtivo" value="true" checked>
                        <label class="form-check-label" for="inserirFlAtivo">Ativo ✅</label>
                        <input type="hidden" name="FlAtivo" value="false" />
                    </div>
                    <button type="submit" class="btn btn-warning w-100">💾 Salvar</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    const editarModal = document.getElementById('editarModal');

    if (editarModal) {
        editarModal.addEventListener('show.bs.modal', event => {
            const button = event.relatedTarget;

            document.getElementById('editarId').value = button.getAttribute('data-id');
            document.getElementById('editarDescricao').value = button.getAttribute('data-descricao');
            document.getElementById('editarUnidade').value = button.getAttribute('data-unidade');
            document.getElementById('editarMetrica').value = button.getAttribute('data-metrica');

            const qtd = parseFloat(button.getAttribute('data-quantidade'));
            const val = parseFloat(button.getAttribute('data-valor'));

            document.getElementById('editarQuantidade').value = !isNaN(qtd) ? qtd : '';
            document.getElementById('editarValor').value = !isNaN(val) ? val : '';

            document.getElementById('editarFlAtivo').checked = button.getAttribute('data-ativo') === 'true';
        });
    }
</script>
