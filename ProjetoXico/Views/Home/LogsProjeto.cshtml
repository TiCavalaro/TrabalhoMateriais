@model IEnumerable<ProjetoXico.Models.TbLogProjeto>

@{
    ViewData["Title"] = "Logs de Projetos 🧾";
}

<div class="container py-4">
    <h2 class="text-warning mb-4 fw-bold">@ViewData["Title"]</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <input type="text" name="usuario" class="form-control" placeholder="ID Usuário">
        </div>
        <div class="col-md-3">
            <input type="text" name="operacao" class="form-control" placeholder="Tipo de operação">
        </div>
        <div class="col-md-3">
            <input type="date" name="data" class="form-control">
        </div>
        <div class="col-md-3">
            <button class="btn btn-warning w-100 fw-bold">Filtrar</button>
        </div>
    </form>

    <div class="table-responsive shadow rounded-3">
        <table class="table table-striped table-dark align-middle text-center mb-0">
            <thead class="table-warning text-dark">
                <tr>
                    <th>ID Log</th>
                    <th>Projeto</th>
                    <th>Usuário</th>
                    <th>Operação</th>
                    <th>Data</th>
                    <th>Descrição</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td>@log.IdLog</td>
                        <td>@log.IdProjeto</td>
                        <td>@log.IdUsuario</td>
                        <td>@log.Operacao</td>
                        <td>@log.DataOperacao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@log.Descricao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
