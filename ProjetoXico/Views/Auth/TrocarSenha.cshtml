@{
    ViewData["Title"] = "Trocar Senha 🔑";
}

<div class="container min-vh-100 d-flex justify-content-center align-items-center bg-dark text-light">
    <div class="card border-0 shadow-lg rounded-4 overflow-hidden"
         style="max-width: 420px; width: 100%; background-color: rgba(25, 25, 25, 0.95);">

        <div class="text-center py-4" style="background: linear-gradient(90deg, #ffb400, #ff8300);">
            <h3 class="text-dark fw-bold mb-0">Trocar Senha</h3>
        </div>

        <div class="card-body p-5">
            <h5 class="text-center mb-3 fw-semibold" style="color: #ffb400;">@User.Identity.Name</h5>
            <p class="text-center text-secondary mb-4">Digite sua nova senha</p>

            @if (ViewBag.Erro != null)
            {
                <div class="alert alert-danger text-center py-2 mb-4" role="alert">
                    @ViewBag.Erro
                </div>
            }

            @if (TempData["Sucesso"] != null)
            {
                <div class="alert alert-success text-center py-2 mb-4" role="alert">
                    @TempData["Sucesso"]
                </div>
            }

            <form asp-action="TrocarSenha" method="post">
                <div class="mb-4">
                    <label for="novaSenha" class="form-label fw-semibold text-light">Nova senha</label>
                    <input type="password" class="form-control form-control-lg bg-dark text-light border-light"
                           id="novaSenha" name="novaSenha" placeholder="Digite a nova senha" required>
                </div>

                <div class="mb-4">
                    <label for="confirmarSenha" class="form-label fw-semibold text-light">Confirmar senha</label>
                    <input type="password" class="form-control form-control-lg bg-dark text-light border-light"
                           id="confirmarSenha" name="confirmarSenha" placeholder="Confirme a nova senha" required>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit"
                            class="btn btn-lg fw-bold text-dark rounded-4 border-0 shadow-sm"
                            style="background: linear-gradient(90deg, #ffb400, #ff8300); transition: transform 0.2s;">
                        Alterar Senha
                    </button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-warning small">
                        Voltar ao sistema
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
