<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - ProjetoXico 🏗️</title>

    <!-- Google Font (cartoon/fun style) -->
    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@400;700&display=swap" rel="stylesheet">

    <!-- Bootstrap Dark -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">

    <style>
        html {
            scroll-behavior: smooth; /* 🌟 Rolagem suave */
        }

        .navbar-brand, .nav-link {
            transition: color 0.3s ease;
        }

            .navbar-brand:hover, .nav-link:hover {
                color: #ff8300 !important;
            }

        footer {
            border-top: 2px solid #ff8300;
        }
    </style>
</head>

<body id="topo" class="bg-dark text-light" style="font-family: 'Comic Neue', cursive;">

    <!-- 🔶 Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow">
        <div class="container">
            <!-- Logo / Voltar ao topo -->
            <a class="navbar-brand fs-3 fw-bold text-warning" asp-controller="Home" asp-action="Index">
                🏗️ ProjetoXico
            </a>

            <!-- Menu toggle (mobile) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto fs-5 align-items-center">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">🏠 Home</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="#projetos">🛠️ Projetos</a></li>
                    <li class="nav-item"><a class="nav-link" href="#servicos">⚙️ Serviços</a></li>
                    <li class="nav-item"><a class="nav-link" href="#contato">✉️ Contato</a></li>

                    <!-- Dropdown CRUDs -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            📋 Interfaces
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="/TbTipoProjeto">📝 Tipo de Projeto</a></li>
                            <li><a class="dropdown-item" href="/TbUsuario">👥 Usuários</a></li>
                            <li><a class="dropdown-item" href="/TbMaterial">📦 Materiais</a></li>
                            <li><a class="dropdown-item" href="/TbProjeto">🏗️ Projetos</a></li>
                            <li><a class="dropdown-item" href="/TbLogProjeto">🕓 Log Projeto</a></li>
                        </ul>
                    </li>

                    <!-- Login / Logout -->
                    <li class="nav-item ms-3 d-flex align-items-center">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline me-2">
                                <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                            </form>

                            <!-- Mostra o nome e link de trocar senha -->
                            <span class="text-warning small me-2">
                                Olá, <strong>@User.Identity.Name</strong> 👋
                            </span>

                            <a asp-action="TrocarSenha" asp-controller="Auth"
                               class="text-decoration-none text-warning small">
                                Trocar senha 🔑
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-outline-light btn-sm" href="/Auth/Login">Login</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🧱 Conteúdo Principal -->
    <main class="container my-5">
        @RenderBody()
    </main>

    <!-- 🦶 Rodapé -->
    <footer class="bg-black text-warning py-4 text-center mt-auto shadow-lg">
        &copy; 2025 ProjetoXico 🏗️ — Todos os direitos reservados
    </footer>

    <!-- 🧩 Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                const destino = document.querySelector(this.getAttribute('href'));
                if (destino) {
                    e.preventDefault();
                    destino.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });
    </script>
</body>
</html>
